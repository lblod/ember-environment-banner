<AuAlert @size='tiny' @skin={{if @skin @skin 'warning'}} class='au-u-margin-bottom-none'>
  <div class='au-u-flex au-u-flex--spaced au-u-flex--between'>
    <p class='au-u-flex au-u-medium au-u-1-5@medium au-u-flex--vertical-center'>
      Environment: {{@environmentName}}
    </p>
    <div class='au-u-flex au-u-flex--spaced-large au-u-flex--center'>
      {{#if @message}}
        <p class={{if this.showPackages 'au-u-3-5@medium' 'au-u-4-5@medium'}}>
          {{text-format @message}}
        </p>
      {{/if}}
      <p class='au-u-flex au-u-flex--vertical-center'>
        {{@applicationName}}
        {{app-version versionOnly=true showExtended=true}}
      </p>
      {{#if this.showPackages}}
        <AuButton
          @skin='link-secondary'
          @icon='info-circle'
          @iconAlignment='left'
          onclick={{this.toggleModal}}
        >
          Editor Package versions
        </AuButton>
        <PackagesOverview
          @showModal={{this.showModal}}
          @toggleModal={{this.toggleModal}}
          @packages={{this.packages}}
        />
      {{/if}}
    </div>
  </div>
</AuAlert>
